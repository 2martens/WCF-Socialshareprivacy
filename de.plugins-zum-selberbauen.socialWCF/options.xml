<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/options.xsd">
    <import>
        <categories>
            <category name="module">
                <showorder>1</showorder>
            </category>
                <category name="module.content">
                    <parent>module</parent>
                </category>
            <!-- socialshareprivacy -->    
            <category name="socialshareprivacy">
                <options>module_socialshareprivacy</options>
            </category>
                <category name="socialshareprivacy.general">
                    <parent>socialshareprivacy</parent>
                </category>
                    <category name="socialshareprivacy.general.general">
                        <parent>socialshareprivacy.general</parent>
                        <showorder>1</showorder>
                    </category>
                    <category name="socialshareprivacy.general.facebook">
                        <parent>socialshareprivacy.general</parent>
                        <showorder>2</showorder>
                    </category>
                    <category name="socialshareprivacy.general.twitter">
                        <parent>socialshareprivacy.general</parent>
                        <showorder>3</showorder>
                    </category>
                    <category name="socialshareprivacy.general.gplus">
                        <parent>socialshareprivacy.general</parent>
                        <showorder>4</showorder>
                    </category>
        </categories>
        <options>
            <!-- modules -->
            <option name="module_socialshareprivacy">
                <categoryname>module.content</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>
            </option>
            <!-- /modules -->
            
            <!-- socialshareprivacy -->
            <option name="socialshareprivacy_general_general_domain">
                <categoryname>socialshareprivacy.general.general</categoryname>
                <optiontype>woltlab_varchar</optiontype>
                <defaultvalue><![CDATA[yourDomain.tld]]></defaultvalue>
                <showorder>1</showorder>
            </option>
            <option name="socialshareprivacy_general_general_infopage">
                <categoryname>socialshareprivacy.general.general</categoryname>
                <optiontype>xs:anyURI</optiontype>
                <defaultvalue><![CDATA[http://www.heise.de/ct/artikel/2-Klicks-fuer-mehr-Datenschutz-1333879.html]]></defaultvalue>
            </option>
            
            <option name="socialshareprivacy_general_facebook_status">
                <categoryname>socialshareprivacy.general.facebook</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <showorder>1</showorder>
                <enableoptions>socialshareprivacy_general_facebook_referrer</enableoptions>
            </option>
            <option name="socialshareprivacy_general_facebook_referrer">
                <categoryname>socialshareprivacy.general.facebook</categoryname>
                <optiontype>woltlan_varchar_nullable</optiontype>
                <defaultvalue><![CDATA[/from/facebook]]></defaultvalue>
                <showorder>2</showorder>
            </option>
            
            <option name="socialshareprivacy_general_twitter_status">
                <categoryname>socialshareprivacy.general.twitter</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <showorder>1</showorder>
                <enableoptions>socialshareprivacy_general_twitter_referrer</enableoptions>
            </option>
            <option name="socialshareprivacy_general_twitter_referrer">
                <categoryname>socialshareprivacy.general.twitter</categoryname>
                <optiontype>woltlab_varchar_nullable</optiontype>
                <defaultvalue><![CDATA[/from/twitter]]></defaultvalue>
                <showorder>2</showorder>
            </option>
            
            <option name="socialshareprivacy_general_gplus_status">
                <categoryname>socialshareprivacy.general.gplus</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <showorder>1</showorder>
                <enableoptions>socialshareprivacy_general_gplus_referrer</enableoptions>
            </option>
            <option name="socialshareprivacy_general_gplus_referrer">
                <categoryname>socialshareprivacy.general.gplus</categoryname>
                <optiontype>woltlab_varchar_nullable</optiontype>
                <defaultvalue><![CDATA[/from/gplus]]></defaultvalue>
                <showorder>2</showorder>
            </option>
            <!-- /socialshareprivacy -->
        </options>
    </import>
</data>